        <button class="close-mobile-menu-btn"><img src="/imgs/icons/cross-icon.svg"></button>
        <div class="mobile-nav-container">
            <% if (profilePic != "") { %>
                <div class="profile-container">
                    <a class="profile-link" href="/profile"><img class="user-profile-pic" src="<%= profilePic %>" alt="user's post"></a>
