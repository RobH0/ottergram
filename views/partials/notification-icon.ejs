<button class="notification-btn">
    <% if (notifications != undefined && notifications.length > 0) { %>
        <img src="/imgs/icons/notification-icon-alert.svg" class="notification-icon">
    <% } else { %>
        <img src="/imgs/icons/notification-icon-empty.svg" class="notification-icon">
    <% } %>
</button>
<div class="notifications-drop-down">
    <h3>Notifications</h3>
    <ul class="notifications-list">
        <% if (notifications != undefined) { %>
            <% for (let index = 0; index < notifications.length; index++){ %>
                <% if (notifications[index].read == false){ %>
                    <li>
                        <div class="notification-container">
                            <a href="<%=notifications[index].relatedURL%>">
                                <% if (notifications[index].message.includes('liked')){ %>
                                    <img src="/imgs/icons/like-red-black-outline.svg">
                                <% } else { %>
                                    <img src="/imgs/icons/comment-black-outline.svg">
                                <% } %>
                                <div class="notification-info">
                                    <p><%=notifications[index].message%></p>
                                    <span><%=notifications[index].date%></span>
                                </div>
                            </a>
                        </div>
                    </li>
                <% } %>
            <% } %>
        <% } %>
    </ul>
</div>