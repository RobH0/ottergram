<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('partials/head_links.ejs') %>
    <title>Ottergram: Register</title>
</head>
<body>
    <header>
        <nav>
            <a href="/"><img class="standard-logo" src="/imgs/icons/otter-logo.svg" alt="Ottergram logo"></a>
            <a href="/login">Sign in</a>
        </nav>
    </header>

    <main class="login-main">
        <div class="content-login">
            <img class="standard-logo" src="/imgs/icons/otter-logo.svg" alt="Ottergram logo">
            <h1>Create new account</h1>
            <% if (locals.messages.error) { %> 
                <div class="error-container">
                    <% locals.messages.error.forEach((element) => {%>
                        <span class="error-message"><%- element %></span>
                    <% }) %>
                </div>
            <% } %>
            <form class="login-form" action="/register" method="post">
                <label for="username">
                    <span>Username</span>
                    <input type="text" id="username" name="username">
                </label>
                <label for="password">
                    <span>Password</span>
                    <input type="password" id="password" name="password">
                </label>
                <input type="submit" value="Sign up" class="sign-in-btn">
            </form>
            <span class="reg-span">Already have an account? <a class="register-link" href="/login">Sign in</a></span>
        </div>
    </main>
</body>
</html>